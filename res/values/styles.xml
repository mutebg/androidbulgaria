<?xml version="1.0" encoding="utf-8"?>
<resources>
	
	
	<!-- STANDART THEME -->  
	<style name="app_theme" parent="android:Theme.Light">
		<item name="android:windowBackground">@color/background_color</item>
		<item name="android:listViewStyle">@style/TransparentListView</item>
		<item name="android:expandableListViewStyle">@style/TransparentExpandableListView</item>
		<item name="android:buttonStyle">@style/submitButtons</item>
		<item name="android:textAppearanceSmall">@style/defSmallText</item>
		<item name="android:textAppearanceMedium">@style/defMediumText</item>
		<item name="android:textAppearanceLarge">@style/defLargeText</item>
		<item name="headClass">@style/header</item>
		<item name="headClassText">@style/headerText</item>
		<item name="activeColor">@style/active_color</item>
		<item name="pasiveColor">@style/pasive_color</item>
		<item name="readColor">@style/read_color</item>
	</style>

	<color name="background_color">#ffffff</color>
	<color name="divider_color">#dddddd</color>
	<color name="text_color">#000000</color>	
	<color name="active_color">#51835d</color>
	<color name="pasive_color">#999999</color>    
	    
	<style name="TransparentListView" parent="@android:style/Widget.ListView">
		<item name="android:cacheColorHint">@android:color/transparent</item>
		<item name="android:divider">@color/divider_color</item>
		<item name="android:dividerHeight">1px</item>
	</style>
	
	<style name="TransparentExpandableListView" parent="@android:style/Widget.ExpandableListView">
		<item name="android:cacheColorHint">@android:color/transparent</item>
	</style> 
	
	<!--<style name="listSeparator" parent="@android:style/Widget.TextView.ListSeparator">
		<item name="android:textColor">#6a6c6d</item>
		<item name="android:layout_height">wrap_content</item>
	</style>
	-->
	<style name="defSmallText" parent="@android:style/TextAppearance.Small">
		<item name="android:textColor">#6a6c6d</item>
	</style>
	
	<style name="defMediumText" parent="@android:style/TextAppearance.Medium">
		<item name="android:textColor">#1680bd</item>
	</style>
	
	<style name="defLargeText" parent="@android:style/TextAppearance.Large">
		<item name="android:textColor">#1680bd</item>
	</style>
	
	<style name="label" parent="@android:style/TextAppearance">
        <item name="android:layout_width">100px</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#1680bd</item>
        <item name="android:typeface">monospace</item>
    </style>
    
    <style name="submitButtons" parent="@android:style/Widget.Button">
    	<item name="android:textColor">@color/active_color</item>
    </style>
    
    <style name="header">
   		<item name="android:background">@color/divider_color</item>
   		<item name="android:padding">5dip</item>
    </style>
    
  	<style name="headerText">
        <item name="android:textColor">@color/active_color</item>
        <item name="android:textSize">14px</item> 
	</style>      
    
    <style name="headerSubText">
         <item name="android:textColor">@color/pasive_color</item>
	     <item name="android:textSize">5pt</item>
    </style>
    
  	<style name="active_color">
     	 <item name="android:textColor">@color/active_color</item>       
    </style>
    
  	<style name="pasive_color">
     	 <item name="android:textColor">@color/pasive_color</item>       
    </style>
    
    <style name="read_color">
     	 <item name="android:textColor">@color/text_color</item>       
    </style>
    
    
        
     <!-- BLACK THEME -->
  	<style name="black_theme">
		<item name="android:windowBackground">@color/black_background_color</item>
		<item name="android:listViewStyle">@style/black_TransparentListView</item>
		<item name="android:expandableListViewStyle">@style/black_TransparentExpandableListView</item>
		<item name="android:buttonStyle">@style/black_submitButtons</item>
		<item name="android:textAppearanceSmall">@style/black_defSmallText</item>
		<item name="android:textAppearanceMedium">@style/black_defMediumText</item>
		<item name="android:textAppearanceLarge">@style/black_defLargeText</item>
		<item name="headClass">@style/black_header</item>
		<item name="headClassText">@style/black_headerText</item>
		<item name="activeColor">@style/black_active_color</item>
		<item name="pasiveColor">@style/black_pasive_color</item>
		<item name="readColor">@style/black_read_color</item>
	</style>

	<color name="black_background_color">#323432</color>
	<color name="black_divider_color">#000000</color>
	<color name="black_text_color">#ffffff</color>	
	<color name="black_active_color">#ffffff</color>
	<color name="black_pasive_color">#c6c4c4</color>    
	    
	<style name="black_TransparentListView" parent="@android:style/Widget.ListView">
		<item name="android:cacheColorHint">@android:color/transparent</item>
		<item name="android:divider">@color/black_divider_color</item>
		<item name="android:dividerHeight">1px</item>
	</style>
	
	<style name="black_TransparentExpandableListView" parent="@android:style/Widget.ExpandableListView">
		<item name="android:cacheColorHint">@android:color/transparent</item>
	</style> 
	
	<!--<style name="listSeparator" parent="@android:style/Widget.TextView.ListSeparator">
		<item name="android:textColor">#6a6c6d</item>
		<item name="android:layout_height">wrap_content</item>
	</style>
	-->
	<style name="black_defSmallText" parent="@android:style/TextAppearance.Small">
		<item name="android:textColor">#6a6c6d</item>
	</style>
	
	<style name="black_defMediumText" parent="@android:style/TextAppearance.Medium">
		<item name="android:textColor">#1680bd</item>
	</style>
	
	<style name="black_defLargeText" parent="@android:style/TextAppearance.Large">
		<item name="android:textColor">#1680bd</item>
	</style>
	
	<style name="black_label" parent="@android:style/TextAppearance">
        <item name="android:layout_width">100px</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#1680bd</item>
        <item name="android:typeface">monospace</item>
    </style>
    
    <style name="black_submitButtons" parent="@android:style/Widget.Button">
    	<item name="android:textColor">@color/black_divider_color</item>
    </style>
    
    <style name="black_header">
   		<item name="android:background">@color/black_divider_color</item>
   		<item name="android:padding">5dip</item>
    </style>
    
  	<style name="black_headerText">
        <item name="android:textColor">@color/black_active_color</item>
        <item name="android:textSize">14px</item> 
	</style>      
    
    <style name="black_headerSubText">
         <item name="android:textColor">@color/black_pasive_color</item>
	     <item name="android:textSize">5pt</item>
    </style>
    
  	<style name="black_active_color">
     	 <item name="android:textColor">@color/black_active_color</item>       
    </style>
    
  	<style name="black_pasive_color">
     	 <item name="android:textColor">@color/black_pasive_color</item>       
    </style>
    
    <style name="black_read_color">
     	 <item name="android:textColor">@color/black_text_color</item>       
    </style>   
    
   
</resources>